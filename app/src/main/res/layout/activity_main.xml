<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/locationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:textSize="15sp"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tBtnNetwork"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/accText"
        android:layout_alignLeft="@+id/accText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Backlight"
        android:id="@+id/textView2"
        android:singleLine="false"
        android:layout_alignBaseline="@+id/tBtnNetwork"
        android:layout_alignBottom="@+id/tBtnNetwork"
        android:layout_toRightOf="@+id/tBtnNetwork"
        android:layout_marginLeft="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Accelerometer"
        android:id="@+id/textView3"
        android:layout_marginTop="11dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/locationView"
        android:layout_alignLeft="@+id/locationView"/>

    <TextView
        android:id="@+id/accText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/locationView"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tBtnService"
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tBtnNetwork" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tracker"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/tBtnService"
        android:layout_alignBottom="@+id/tBtnService"
        android:layout_alignLeft="@+id/textView2" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tBtnBattery"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tBtnService"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Battery Save"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/tBtnBattery"
        android:layout_alignBottom="@+id/tBtnBattery"
        android:layout_alignLeft="@+id/textView4" />

</RelativeLayout>
